<div class="card col-md-6 mx-auto container2">
    <h3 class="text-center display-4">New post</h4>
    <form action="/cloud" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <input type="file" class="form-control-file mt-3 btn-dark" name="image" required>
        </div>
        <div class="form-group">
            <label for="subtitle">Subtitle</label>
            <input type="text" class="form-control" name="subtitle" required>
        </div>
        <button type="submit" class="btn btn-dark btn-lg">Post</button>
    </form>
</div>